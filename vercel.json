{
  "buildCommand": "echo '=== VITE ENV VARS ===' && printenv | grep ^VITE_ && cd frontend && echo '=== .env file ===' && cat .env 2>/dev/null || echo 'no .env' && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/fdc-verifier/:path*",
      "destination": "https://fdc-verifiers-testnet.flare.network/:path*"
    },
    {
      "source": "/api/da-layer/:path*",
      "destination": "https://ctn2-data-availability.flare.network/:path*"
    },
    {
      "source": "/((?!assets/).*)",
      "destination": "/index.html"
    }
  ]
}
